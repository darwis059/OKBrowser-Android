<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Image Url !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/showWebUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:text="Image URL" />
    </LinearLayout>
    <!-- Divider !-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <!-- Menu Body !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Open Image Button !-->
        <Button
            android:id="@+id/imageOpenButton"
            style="@style/BorderlessButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_image_text"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:icon="@drawable/ic_outline_image_24"
            app:iconGravity="start"
            app:iconPadding="10dp" />
        <!-- Open Image With New Tab Button !-->
        <Button
            android:id="@+id/imageOpenNewTabButton"
            style="@style/BorderlessButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_image_new_tab_text"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:icon="@drawable/ic_baseline_add_24"
            app:iconGravity="start"
            app:iconPadding="10dp" />
        <!-- Open Image With Incognito Tab Button !-->
        <Button
            android:id="@+id/imageOpenIncognitoButton"
            style="@style/BorderlessButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_image_incognito_text"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:icon="@drawable/ic_baseline_add_box_24"
            app:iconGravity="start"
            app:iconPadding="10dp" />
        <!-- Download Image Button !-->
        <Button
            android:id="@+id/imageDownloadButton"
            style="@style/BorderlessButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/download_image_text"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:icon="@drawable/ic_baseline_get_app_24"
            app:iconGravity="start"
            app:iconPadding="10dp" />
        <!-- Copy Link Button !-->
        <Button
            android:id="@+id/anchorCopyUrlButton"
            style="@style/BorderlessButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/copy_link_text"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:icon="@drawable/ic_baseline_content_copy_24"
            app:iconGravity="start"
            app:iconPadding="10dp" />
    </LinearLayout>
</LinearLayout>