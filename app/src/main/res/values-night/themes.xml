<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OKBrowser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbar_background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Dark Theme -->
        <item name="toolbarStyle">@style/toolbarThemeStyle</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="android:popupWindowStyle">@style/PopupMenuStyle</item>
    </style>
    <!-- Styles !-->
    <!-- Toolbar !-->
    <style name="toolbarThemeStyle">
        <item name="android:background">@color/toolbar_background_dark</item>
    </style>
    <!-- Background Toolbar (for not Transparent) !-->
    <style name="toolbarTheme">
        <item name="android:background">@color/background_dark</item>
    </style>
    <!-- New Tab Search Input !-->
    <style name="newTabSearchInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/item_background_dark</item>
    </style>
    <!-- CardView !-->
    <style name="CardViewStyle">
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@color/cardview_background_dark</item>
    </style>
    <!-- Popup Menu !-->
    <style name="PopupMenuStyle">
        <item name="android:popupBackground">@color/popups_background_dark</item>
    </style>
</resources>